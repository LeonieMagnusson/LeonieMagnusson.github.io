<div class="col">
  <a href="{% if game.redirect %}{{ game.redirect }}{% else %}{{ game.url | relative_url }}{% endif %}">
    <div class="card h-100 hoverable">
      {% if game.img %}
        {%
          include figure.liquid
          loading="eager"
          path=game.img
          sizes="250px"
          alt="game thumbnail"
          class="card-img-top"
        %}
      {% endif %}
      <div class="card-body">
        <h2 class="card-title">{{ game.title }}</h2>
        <p class="card-text">{{ game.description }}</p>
        <div class="row ml-1 mr-1 p-0">
          {% if game.github %}
            <div class="github-icon">
              <div class="icon" data-toggle="tooltip" title="Code Repository">
                <a href="{{ game.github }}"><i class="fa-brands fa-github gh-icon"></i></a>
              </div>
              {% if game.github_stars %}
                <span class="stars" data-toggle="tooltip" title="GitHub Stars">
                  <i class="fa-solid fa-star"></i>
                  <span id="{{ game.github_stars }}-stars"></span>
                </span>
              {% endif %}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </a>
</div>
