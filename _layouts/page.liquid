---
layout: default
---
{% if page._styles %}
  <!-- Page/Post style -->
  <style type="text/css">
    {{ page._styles }}
  </style>
{% endif %}

<header class="post-header">
  <h1 class="post-title">
    {{ page.title }}
    {% if page.page_pdf %}
      <a
      href="{{ page.page_pdf | prepend: 'assets/pdf/' | relative_url}}"
      target="_blank"
      rel="noopener noreferrer"
      class="float-right"
      ><i class="fa-solid fa-file-pdf"></i> Recommendation Letter
      </a>
    {% endif %}
  </h1>
  {% if page.description %}
    <p class="post-description">{{ page.description }}</p>
  {% endif %}
</header>


  <article>
    {{ content }}
  </article>

  {% if page.related_publications %}
    <h2>References</h2>
    <div class="publications">
      {% bibliography --cited_in_order %}
    </div>
  {% endif %}

  {% if site.giscus and page.giscus_comments %}
    {% include giscus.liquid %}
  {% endif %}
</div>
